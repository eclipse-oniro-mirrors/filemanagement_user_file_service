    "hitrace:hitrace_meter",
    "image_framework:image_native",
    "ipc:ipc_core",
    "napi:ace_napi",
    "samgr:samgr_proxy",
  ]
}

group("fuzztest") {
  testonly = true
  deps = [ ":ExternalFileAccessCreateFileFuzzTest" ]
}
